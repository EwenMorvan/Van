CONFIG_BLINK_LED_GPIO=y
CONFIG_BLINK_GPIO=8

# =====================================================================
# Configuration pour ESP32-C3 Xiao - Système Vidéoprojecteur
# =====================================================================

# Enable Bluetooth & BLE (NimBLE is built-in to ESP-IDF)
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_CONTROLLER_MODE_BLE_ONLY=y
CONFIG_BT_NIMBLE_MAX_CONNECTIONS=1
CONFIG_BT_NIMBLE_GAP_DEVICE_NAME_MAX_LENGTH=31

# ESP32-C3 BT Controller
CONFIG_BTDM_CTRL_MODE_BLE_ONLY=y
CONFIG_BTDM_CTRL_MODE_BR_EDR_ONLY=n
CONFIG_BTDM_CTRL_MODE_BTDM=n

# NimBLE specific
CONFIG_BT_NIMBLE_MEM_ALLOC_MODE_INTERNAL=y
CONFIG_BT_NIMBLE_HOST_TASK_STACK_SIZE=4096
CONFIG_BT_NIMBLE_TASK_STACK_SIZE=4096

# Logs
CONFIG_LOG_DEFAULT_LEVEL=3
CONFIG_LOG_MAXIMUM_LEVEL=5

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# GPIO - Fonctions critiques en IRAM
CONFIG_GPIO_CTRL_FUNC_IN_IRAM=y

# Optimisations
CONFIG_COMPILER_OPTIMIZATION_SIZE=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_ENABLE=y

# UART/Console
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
CONFIG_ESP_CONSOLE_UART_NUM=0

# Heap
CONFIG_HEAP_TASK_TRACKING=y

