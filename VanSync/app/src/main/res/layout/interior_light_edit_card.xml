<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_side_margin"
    android:layout_marginBottom="@dimen/card_side_margin"


    android:background="@drawable/card_container">

    <!-- Header avec titre centrÃ© et bouton de fermeture -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/card_header">

        <!-- Espace invisible Ã  gauche pour Ã©quilibrer la croix -->
        <Space
            android:id="@+id/left_spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_xlarge"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:minWidth="24sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Interior Lights"
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/close_button"
            app:layout_constraintStart_toEndOf="@id/left_spacer"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/padding_medium" />

        <!-- Bouton de fermeture avec croix -->
        <TextView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ•"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_xlarge"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lights modes Content avec ScrollView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/interior_lights_mode_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="@id/header_layout"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <TextView
            android:id="@+id/interior_light_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xxlarge"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Preset Modes"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Underline -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interior_underline1"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_stroke"
            android:layout_marginEnd="@dimen/margin_xxlarge"
            android:background="@drawable/spacer_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/interior_light_title1"
            app:layout_constraintTop_toBottomOf="@id/interior_light_title1" />

        <!-- ScrollView pour contenir les boutons dynamiques -->
        <ScrollView
            android:id="@+id/light_modes_scrollview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/interior_underline1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Container pour les boutons dynamiques -->
                <LinearLayout
                    android:id="@+id/light_modes_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Colonne gauche pour les boutons -->
                    <LinearLayout
                        android:id="@+id/left_column"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/margin_xlarge"
                        android:paddingEnd="@dimen/margin_medium"
                        android:paddingBottom="@dimen/margin_medium">

                        <!-- Les boutons seront ajoutÃ©s dynamiquement ici -->

                    </LinearLayout>

                    <!-- Colonne droite pour les boutons -->
                    <LinearLayout
                        android:id="@+id/right_column"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:paddingEnd="@dimen/margin_xlarge"
                        android:paddingBottom="@dimen/margin_medium">

                        <!-- Les boutons seront ajoutÃ©s dynamiquement ici -->

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Underline -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/interior_underline2"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_stroke"
        android:layout_marginEnd="@dimen/margin_xxlarge"
        android:layout_marginStart="@dimen/margin_xxlarge"

        android:background="@drawable/spacer_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/interior_lights_mode_layout" />

    <LinearLayout
        android:id="@+id/buttons_container0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_large"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/interior_lights_mode_layout">
        <!-- Bouton Apply -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interior_light_apply_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_button_medium"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@drawable/light_mode_button_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/apply_mode_interior_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingBottom="@dimen/padding_small"
                android:text="âœ… Apply"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Bouton Edit -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interior_light_edit_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_button_medium"
            android:layout_marginStart="@dimen/margin_large"
            android:background="@drawable/light_mode_button_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/edit_mode_interior_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingBottom="@dimen/padding_small"
                android:text="âœï¸ Edit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Container pour les boutons Delete et Add New centrÃ©s -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_large"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttons_container0">

        <!-- Bouton Delete -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interior_light_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_button_medium"
            android:layout_marginEnd="@dimen/margin_large"
            android:background="@drawable/light_mode_button_bg">

            <TextView
                android:id="@+id/delete_interior_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingBottom="@dimen/padding_small"
                android:text="ðŸ—‘ï¸ Delete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bouton Add New -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/interior_light_add_new_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_button_medium"
            android:layout_marginStart="@dimen/margin_large"
            android:background="@drawable/light_mode_button_bg">

            <TextView
                android:id="@+id/add_new_interior_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_large"
                android:paddingBottom="@dimen/padding_small"
                android:text="âž• Add New"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>