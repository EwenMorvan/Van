<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/card_side_margin"
    android:layout_marginBottom="@dimen/card_side_margin"
    android:layout_marginStart="@dimen/card_side_margin"
    android:layout_marginEnd="@dimen/card_side_margin"
    android:background="@drawable/card_container">

    <!-- Header avec titre centré -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/card_header">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Battery overview"
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/padding_medium" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="@id/header_layout"
        app:layout_constraintEnd_toEndOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
       >

        <!-- Left layout (Battery gauge) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/battery_gauge_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Contenu de la partie gauche -->
            <com.van.management.ui.battery.BatteryGaugeView
                android:id="@+id/battery_gauge_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/battery_gauge_bg"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/battery_gauge_energy_logo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/energy_logo"
                    android:scaleType="fitCenter"
                    app:tint="@color/white"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintVertical_bias="0.28"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/battery_gauge_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="--%"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textColor="@color/white"
                    app:layout_constraintVertical_bias="0.61"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                     />

            </com.van.management.ui.battery.BatteryGaugeView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Right layout (Battery details) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/battery_details_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Container pour centrer le groupe verticalement et horizontalement -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Guideline à 40% pour séparer labels et valeurs -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/details_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <!-- State -->
                <TextView
                    android:id="@+id/state_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/details_guideline"
                    android:layout_marginEnd="@dimen/margin_medium" />

                <TextView
                    android:id="@+id/state_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="⏸️ IDLE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/state_label"
                    app:layout_constraintStart_toEndOf="@id/details_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/margin_medium" />

                <!-- Power -->
                <TextView
                    android:id="@+id/power_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Power:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/state_label"
                    app:layout_constraintStart_toStartOf="@id/state_label"
                    app:layout_constraintEnd_toEndOf="@id/state_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/power_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="--,-W"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/power_label"
                    app:layout_constraintStart_toStartOf="@id/state_value"
                    app:layout_constraintEnd_toEndOf="@id/state_value" />

                <!-- Voltage -->
                <TextView
                    android:id="@+id/voltage_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Voltage:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/power_label"
                    app:layout_constraintStart_toStartOf="@id/state_label"
                    app:layout_constraintEnd_toEndOf="@id/state_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/voltage_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="--,--V"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/voltage_label"
                    app:layout_constraintStart_toStartOf="@id/state_value"
                    app:layout_constraintEnd_toEndOf="@id/state_value" />

                <!-- Current -->
                <TextView
                    android:id="@+id/current_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Current:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/voltage_label"
                    app:layout_constraintStart_toStartOf="@id/state_label"
                    app:layout_constraintEnd_toEndOf="@id/state_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/current_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="--,--A"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/current_label"
                    app:layout_constraintStart_toStartOf="@id/state_value"
                    app:layout_constraintEnd_toEndOf="@id/state_value" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/battery_card_spacer"
            android:layout_width="@dimen/card_stroke"
            android:layout_height="0dp"
            android:background="@drawable/spacer_line"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Guideline à 50% pour séparer les deux colonnes -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>