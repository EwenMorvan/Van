<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9282828">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/system_info_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/system_info_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Popup Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popup_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/card_side_margin"
        android:layout_marginEnd="@dimen/card_side_margin"
        android:background="@drawable/card_container"
        app:layout_constraintTop_toTopOf="@+id/system_info_guideline1"
        app:layout_constraintBottom_toBottomOf="@+id/system_info_guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.90"
        android:elevation="8dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/card_header">

            <Space
                android:id="@+id/left_spacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:minWidth="24sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="⚙️ System Health"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/close_button"
                app:layout_constraintStart_toEndOf="@id/left_spacer"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/padding_medium" />

            <TextView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✕"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content ScrollView -->
        <ScrollView
            android:id="@+id/content_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_xlarge">

                <!-- Separator Line Top -->
                <View
                    android:id="@+id/separator_top"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/spacer_line"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_xlarge" />

                <!-- System Overview -->
                <TextView
                    android:id="@+id/section_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Overview"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large" />

                <LinearLayout
                    android:id="@+id/overview_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_xlarge">
                    <!-- Content will be added dynamically -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/spacer_line"
                    android:layout_marginBottom="@dimen/margin_xlarge" />

                <!-- Main System Errors -->
                <TextView
                    android:id="@+id/section_main_errors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main System Errors"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large" />

                <LinearLayout
                    android:id="@+id/main_errors_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_xlarge">
                    <!-- Errors will be added dynamically -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/spacer_line"
                    android:layout_marginBottom="@dimen/margin_xlarge" />

                <!-- Slave PCB Errors -->
                <TextView
                    android:id="@+id/section_slave_errors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slave PCB Errors"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large" />

                <LinearLayout
                    android:id="@+id/slave_errors_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_xlarge">
                    <!-- Errors will be added dynamically -->
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/spacer_line"
                    android:layout_marginBottom="@dimen/margin_xlarge" />

                <!-- Van State Details -->
                <TextView
                    android:id="@+id/section_van_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete Van State"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large" />

                <LinearLayout
                    android:id="@+id/van_state_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_large">
                    <!-- Van state details will be added dynamically -->
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
