<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9282828">

    <!-- Popup Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popup_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_side_margin"
        android:layout_marginBottom="@dimen/card_side_margin"
        android:layout_marginStart="@dimen/card_side_margin"
        android:layout_marginEnd="@dimen/card_side_margin"
        android:background="@drawable/card_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        android:elevation="8dp">

        <!-- Header avec titre centrÃ© et bouton de fermeture -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/card_header">

            <!-- Espace invisible Ã  gauche pour Ã©quilibrer la croix -->
            <Space
                android:id="@+id/left_spacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:minWidth="24sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ðŸ“± Bluetooth Information"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/close_button"
                app:layout_constraintStart_toEndOf="@id/left_spacer"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/padding_medium" />

            <!-- Bouton de fermeture avec croix -->
            <TextView
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ•"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingEnd="@dimen/padding_xlarge"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="@id/header_layout"
            app:layout_constraintEnd_toEndOf="@id/header_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/padding_xlarge">

            <!-- Separator Line Top -->
            <View
                android:id="@+id/separator_top"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@drawable/spacer_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="@dimen/margin_medium" />

            <!-- Info Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/separator_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_xlarge">

                <!-- Connection Status -->
                <TextView
                    android:id="@+id/connection_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/info_guideline"
                    android:layout_marginEnd="@dimen/margin_medium" />

                <TextView
                    android:id="@+id/popup_connection_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textColor="@color/connected"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/connection_status_label"
                    app:layout_constraintStart_toEndOf="@id/info_guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/margin_medium" />

                <!-- Service Status -->
                <TextView
                    android:id="@+id/service_status_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Services:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/connection_status_label"
                    app:layout_constraintStart_toStartOf="@id/connection_status_label"
                    app:layout_constraintEnd_toEndOf="@id/connection_status_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/popup_service_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/service_status_label"
                    app:layout_constraintStart_toStartOf="@id/popup_connection_status"
                    app:layout_constraintEnd_toEndOf="@id/popup_connection_status" />

                <!-- Device Name -->
                <TextView
                    android:id="@+id/device_name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Device:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/service_status_label"
                    app:layout_constraintStart_toStartOf="@id/connection_status_label"
                    app:layout_constraintEnd_toEndOf="@id/connection_status_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/popup_device_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="VanManager"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/device_name_label"
                    app:layout_constraintStart_toStartOf="@id/popup_connection_status"
                    app:layout_constraintEnd_toEndOf="@id/popup_connection_status" />

                <!-- MAC Address -->
                <TextView
                    android:id="@+id/mac_address_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MAC:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/device_name_label"
                    app:layout_constraintStart_toStartOf="@id/connection_status_label"
                    app:layout_constraintEnd_toEndOf="@id/connection_status_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/popup_device_mac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="00:00:00:00:00:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    app:layout_constraintTop_toTopOf="@id/mac_address_label"
                    app:layout_constraintStart_toStartOf="@id/popup_connection_status"
                    app:layout_constraintEnd_toEndOf="@id/popup_connection_status" />

                <!-- RSSI -->
                <TextView
                    android:id="@+id/rssi_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Signal:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/mac_address_label"
                    app:layout_constraintStart_toStartOf="@id/connection_status_label"
                    app:layout_constraintEnd_toEndOf="@id/connection_status_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/popup_device_rssi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-50 dBm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/rssi_label"
                    app:layout_constraintStart_toStartOf="@id/popup_connection_status"
                    app:layout_constraintEnd_toEndOf="@id/popup_connection_status" />

                <!-- MTU -->
                <TextView
                    android:id="@+id/mtu_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MTU:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@id/rssi_label"
                    app:layout_constraintStart_toStartOf="@id/connection_status_label"
                    app:layout_constraintEnd_toEndOf="@id/connection_status_label"
                    android:layout_marginTop="@dimen/margin_large" />

                <TextView
                    android:id="@+id/popup_device_mtu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="512 bytes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/mtu_label"
                    app:layout_constraintStart_toStartOf="@id/popup_connection_status"
                    app:layout_constraintEnd_toEndOf="@id/popup_connection_status" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/info_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.45" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Separator Line Middle -->
            <View
                android:id="@+id/separator_middle"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@drawable/spacer_line"
                app:layout_constraintTop_toBottomOf="@id/info_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="@dimen/margin_xlarge" />

            <!-- Services Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/services_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/separator_middle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_large">

                <TextView
                    android:id="@+id/services_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Services"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <ScrollView
                    android:id="@+id/services_scrollview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp"
                    app:layout_constraintTop_toBottomOf="@id/services_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_medium">

                    <LinearLayout
                        android:id="@+id/popup_services_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/margin_medium"
                        android:paddingEnd="@dimen/margin_medium">

                        <!-- Les services seront ajoutÃ©s dynamiquement ici -->

                    </LinearLayout>

                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Separator Line Bottom -->
            <View
                android:id="@+id/separator_bottom"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@drawable/spacer_line"
                app:layout_constraintTop_toBottomOf="@id/services_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="@dimen/margin_xlarge" />

            <!-- Action Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bluetooth_action_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/card_button_medium"
                android:background="@drawable/light_mode_button_bg"
                app:layout_constraintTop_toBottomOf="@id/separator_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large">

                <TextView
                    android:id="@+id/bluetooth_action_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_xlarge"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_xlarge"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="ðŸ”Œ Disconnect"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
