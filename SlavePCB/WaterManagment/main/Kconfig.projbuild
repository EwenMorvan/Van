menu "SlavePCB Configuration"

    config SLAVEPCB_ENABLE_DEBUG_LOGS
        bool "Enable debug logging"
        default y
        help
            Enable debug level logging for SlavePCB components.

    config SLAVEPCB_BUTTON_DEBOUNCE_MS
        int "Button debounce time (ms)"
        range 10 1000
        default 50
        help
            Time in milliseconds for button debouncing.

    config SLAVEPCB_LONG_CLICK_MS
        int "Long click threshold (ms)"
        range 500 5000
        default 1000
        help
            Time in milliseconds to distinguish between short and long clicks.

    config SLAVEPCB_HX711_SAMPLES
        int "HX711 samples for averaging"
        range 1 50
        default 10
        help
            Number of samples to take for weight averaging.

    config SLAVEPCB_TANK_READ_INTERVAL_MS
        int "Tank reading interval (ms)"
        range 500 10000
        default 2000
        help
            Interval between tank weight readings.

    config SLAVEPCB_I2C_FREQ_HZ
        int "I2C frequency (Hz)"
        range 10000 400000
        default 100000
        help
            I2C bus frequency for current sensors.

    config SLAVEPCB_W5500_IP
        string "W5500 IP Address"
        default "192.168.1.100"
        help
            IP address for the W5500 Ethernet controller.

    config SLAVEPCB_MAINPCB_IP
        string "MainPCB IP Address"
        default "192.168.1.50"
        help
            IP address of the MainPCB to communicate with.

    config SLAVEPCB_COMM_PORT
        int "Communication port"
        range 1024 65535
        default 8080
        help
            TCP port for communication with MainPCB.

endmenu

menu "WiFi OTA Configuration"

    config WIFI_SSID
        string "WiFi SSID"
        default "van_wifi"
        help
            SSID (network name) for the WiFi network to connect to.

    config WIFI_PASSWORD
        string "WiFi Password"
        default "van123456"
        help
            WiFi password (WPA or WPA2).

    config WIFI_MAXIMUM_RETRY
        int "Maximum retry"
        default 5
        help
            Set the Maximum retry to avoid station reconnecting to the AP unlimited when the AP is really inexistent.

    config OTA_SERVER_IP
        string "OTA Server IP"
        default "192.168.1.10"
        help
            IP address of the OTA update server.

    config OTA_SERVER_PORT
        int "OTA Server Port"
        range 1024 65535
        default 8080
        help
            Port for OTA updates.

    config OTA_FILENAME
        string "OTA Firmware Filename"
        default "/WaterManagment.bin"
        help
            Filename of the firmware binary on the OTA server.

    config OTA_AUTO_UPDATE
        bool "Enable automatic OTA updates"
        default n
        help
            Enable automatic checking and updating from OTA server.

    config OTA_UPDATE_INTERVAL_MINUTES
        int "OTA Update Check Interval (minutes)"
        depends on OTA_AUTO_UPDATE
        range 5 1440
        default 60
        help
            Interval in minutes to check for OTA updates.

endmenu
